// Prisma Schema for Memo App with Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 사용자 모델
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  displayName  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  notes        Note[]
  folders      Folder[]

  @@map("users")
}

// 폴더 모델
model Folder {
  id         String   @id @default(uuid())
  name       String
  parentId   String?
  isSpecial  Boolean  @default(false)
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes      Note[]

  @@map("folders")
  @@index([userId])
}

// 메모 모델
model Note {
  id         String   @id @default(uuid())
  content    String   @default("")
  folderId   String
  userId     String
  createdAt  DateTime @default(now())
  modifiedAt DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder     Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@map("notes")
  @@index([userId])
  @@index([folderId])
}
